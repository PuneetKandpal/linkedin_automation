# Mongo + session encryption -------------------------------------------------
# MongoDB connection string (required)
MONGODB_URI=mongodb://localhost:27017/linkedin-publisher
# 32-byte secret used to encrypt Playwright storageState JSON (required)
STORAGE_STATE_SECRET=change_this_to_a_32_char_secret

# Server / worker -------------------------------------------------------------
# HTTP port for Express API
PORT=3000
# Comma-separated list of allowed origins for CORS (use * to allow all)
CORS_ORIGIN=http://localhost:5173
# Where static config (selectors, delays, typing profiles) lives
CONFIG_DIR=./config
# Worker polling interval in ms
WORKER_POLL_MS=5000
# Global logging level and retention (days)
LOG_LEVEL=info
LOG_RETENTION_DAYS=15

# Playwright + networking -----------------------------------------------------
# Force worker/bootstrap to bypass any stored proxy ("true" | "false")
NO_PROXY=false
# Enable Playwright tracing or screenshot capture when using runner.ts helpers
PW_TRACE=false
PW_SCREENSHOT_ON_ERROR=false

# Bootstrap defaults (used if CLI flags omitted) ------------------------------
ACCOUNT_ID=
DISPLAY_NAME=
EMAIL=
TIMEZONE=
PROXY_SERVER=
PROXY_USERNAME=
PROXY_PASSWORD=
