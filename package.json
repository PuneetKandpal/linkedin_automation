{
  "name": "linkedin-article-publisher",
  "version": "1.0.0",
  "description": "Config-driven LinkedIn Article Publisher using Playwright with Page Object Model",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:server": "ts-node src/server.ts",
    "dev:worker": "ts-node src/worker.ts",
    "bootstrap": "ts-node src/bootstrap.ts",
    "codegen": "npx playwright codegen --browser=chromium --user-data-dir=./profiles/acct_01 https://www.linkedin.com",
    "trace:show": "npx playwright show-trace ./output/traces/latest.zip",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "linkedin",
    "automation",
    "playwright",
    "article-publisher"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.58.0",
    "dotenv": "17.2.3",
    "express": "^4.21.2",
    "marked": "^12.0.2",
    "mongoose": "^8.10.0",
    "sanitize-html": "^2.12.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^25.0.10",
    "@types/sanitize-html": "^2.11.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
